{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "docker build -f compose/production/django/Dockerfile -t pick-pic ."
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "docker run -dp 8000:5000 pick-pic",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
